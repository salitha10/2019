<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a2019mad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.2019MAD">
        <activity android:name="com.example.mad.MovieOverview"  android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity android:name="com.example.mad.MainActivity" android:windowSoftInputMode="adjustPan|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mad.AddMovie" android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name="com.example.mad.MovieList" android:windowSoftInputMode="adjustPan|adjustResize" />
    </application>

</manifest>